{
  "extends": "@tsconfig/esm/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "downlevelIteration": true,
    "strict": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@features/*": ["src/features/*"],
      "@styles/*": ["src/styles/*"],
      "@theme/*": ["src/theme/*"],
      "@helpers/*": ["src/helpers/*"],
    }
  },
  "include": ["src/**/*", ".ladle/**/*"],
  "exclude": ["node_modules"]
}
